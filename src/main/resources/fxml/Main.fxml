<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<StackPane prefHeight="600" prefWidth="800" style="-fx-background-color: #D6D5D6;"
           xmlns="http://javafx.com/javafx/25"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="application.GUIController">

    <VBox alignment="TOP_CENTER" spacing="25">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20"/>
        </padding>

        <!-- Image Section -->
        <StackPane maxWidth="500" minHeight="250"
                   style="-fx-background-color: #C5C4C5; -fx-effect: dropshadow(gaussian, #00000050, 5, 0, 2, 2);">
            <ImageView fx:id="objectImage" fitHeight="220" preserveRatio="true"/>
        </StackPane>

        <!-- Name & Visibility -->
        <VBox alignment="CENTER" spacing="8">

            <Label fx:id="commonNameLabel" text="[object common name]">
                <font><Font name="Yu Gothic UI" size="23"/></font>
            </Label>

            <!-- Visibility ScrollPane -->
            <StackPane maxWidth="550" prefHeight="160"
                       style="-fx-background-color: #EFEFEF; -fx-border-color: #A0A0A0; -fx-padding: 5;">
                <ScrollPane fx:id="visibilityScrollPane" fitToWidth="true"
                            hbarPolicy="NEVER" vbarPolicy="AS_NEEDED" style="-fx-background: #EFEFEF;">
                    <content>
                        <Label fx:id="nextVisibleLabel"
                               wrapText="true"
                               text="Visibility periods will appear here"
                               style="-fx-font-size: 12px; -fx-text-fill: black;" />
                    </content>
                </ScrollPane>
            </StackPane>

        </VBox>

        <!-- Scrollable Details -->
        <StackPane maxWidth="650" minHeight="250" style="-fx-background-color: #C5C4C5;">
            <ScrollPane fitToWidth="true" style="-fx-background-color: #C5C4C5;" vbarPolicy="AS_NEEDED">
                <content>
                    <VBox spacing="6">
                        <padding>
                            <Insets bottom="12" left="12" right="12" top="12"/>
                        </padding>
                        <Text fx:id="messierNumberText" text="Messier Number: "/>
                        <Text fx:id="objectTypeText" text="Object Type: "/>
                        <Text fx:id="distanceText" text="Distance: "/>
                        <Text fx:id="constellationText" text="Constellation:"/>
                        <Text fx:id="magnitudeText" text="Apparent Magnitude: "/>
                        <Text fx:id="dimensionsText" text="Dimensions: "/>
                        <Text fx:id="rightAscensionText" text="Right Ascension (RA): "/>
                        <Text fx:id="declinationText" text="Declination: "/>
                        <Text fx:id="altitudeText" text="Altitude: "/>
                        <Text fx:id="azimuthText" text="Azimuth: "/>
                        <Text fx:id="sizeText" text="Size: "/>
                    </VBox>
                </content>
            </ScrollPane>
        </StackPane>

    </VBox>

    <!-- Back Button -->
    <Button fx:id="backButton" onAction="#switchHome"
            prefHeight="28" prefWidth="35"
            style="-fx-background-color: #D6D5D6; -fx-background-radius: 360;"
            text="â¬…" StackPane.alignment="TOP_LEFT">
        <StackPane.margin>
            <Insets left="10" top="10"/>
        </StackPane.margin>
    </Button>

</StackPane>
